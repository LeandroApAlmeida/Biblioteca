@using Library.Services.Model.Dto

@model UserDto


@{
    
    ViewData["title"] = "Cadastrar Administrador";
    
    int? role = ViewBag.UserRole as int?;

}


@section Styles {

    <link rel="stylesheet" href="~/css/spinner.css" asp-append-version="false" />

}


<div class="conteiner-fluid" style="margin-top:15px;">


    @await Html.PartialAsync("_MessageErrorPartial")


    <form id="user-form" method="post" asp-controller="User" asp-action="RegisterAdm">


        @Html.AntiForgeryToken()


        <div class="d-flex justify-content-between mb-3">

            <h4>Cadastrar Administrador</h4>

            <div class="d-flex justify-content-between">

                <button id="save-button" class="btn btn-save btn-default" type="submit">
                    <img class="m-0" src="~/img/save_icon_16.png" /> &nbspSalvar
                </button>

                <a id="cancel-button" class="btn btn-cancel btn-default" asp-controller="Login" asp-action="Login">
                    <img class="m-0" src="~/img/cancel_icon_16.png" /> &nbspCancelar
                </a>

            </div>

        </div>


        @{
            await Html.RenderPartialAsync("~/Views/User/_UserPartial.cshtml", Model);
        }


        @Html.Hidden("Role", role)


    </form>


</div>


<div id="spinner" class="spinner" style="display: none; position:absolute"></div>


@section Scripts {
    
    <script src="~/js/register-user.js" asp-append-version="true"></script>

}