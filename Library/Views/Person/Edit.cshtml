@using Library.Db.Models
@model PersonModel


@{

    ViewData["title"] = "Editar Pessoa";
    
}


@section Styles {

    <link rel="stylesheet" href="~/css/spinner.css" asp-append-version="false" />

    <link rel="stylesheet" href="~/css/spinner.css" asp-append-version="false" />

}


<div class="conteiner-fluid">


    @await Html.PartialAsync("_MessageErrorPartial")


    <form id="person-form" method="post" asp-controller="Person" asp-action="Edit">


        @Html.AntiForgeryToken()


        <div class="d-flex justify-content-between mb-3">

            <h4>Editar Pessoa</h4>

            <div class="d-flex justify-content-between">

                <button id="save-button" class="btn btn-save btn-default" type="submit">
                    <img class="m-0" src="~/img/save_icon_16.png" /> &nbspSalvar
                </button>

                <a id="cancel-button" class="btn btn-cancel btn-default" asp-controller="Person" asp-action="Manage">
                    <img class="m-0" src="~/img/cancel_icon_16.png" /> &nbspCancelar
                </a>

            </div>

        </div>


        <input type="hidden" asp-for="Id" />


        @{
            await Html.RenderPartialAsync("~/Views/Person/_PersonPartial.cshtml", Model);
        }


    </form>


</div>


<div id="spinner" class="spinner" style="display: none; position:absolute"></div>


@section Scripts {

    <script src="~/js/register-person.js" asp-append-version="true"></script>

}